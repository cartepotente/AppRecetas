<%= render 'bienvenido/index'%>

<% @recipes.each_slice(3) do |recipe| %>
      <div class="row">
        <% recipe.each do |recipe| %>
          <div class="col-md-4">
            <div class="recipe">
              <div class="image_wrapper">
                  <%= link_to recipe do  %>
                    <%= image_tag recipe.image.url(:medium), class: "img" %>
                  <% end %>
              </div>                
              <h2><%= link_to recipe.titulo, recipe %></h2> 
        
            </div>
           </div>
      <% end %>
    </div>

  <% end %>
  


<%= link_to 'Nueva Receta', new_recipe_path, class: "btn btn-default" %>
