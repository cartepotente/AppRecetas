<%= form_for @recipe, html: { multipart: true } do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> Proh√≠be guardar los datos:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="panel-body"></div>
  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion, class: 'form-control' %>
  </div>
  
  <br>
  <div class="field">    
    <%= f.file_field :image %>
  </div>
<br>

  <div class="row"> 
    <div class="col-md-6">
      <h3> Ingredientes</h3>
        <div id="ingredients">
            <%= f.fields_for :ingredients do |ingredient| %>
              <%= render 'ingredient_fields', f: ingredient %>
              <% end %>
             <div class="links">
                <%= link_to_add_association 'Agregar', f, :ingredients, class: 'btn btn-default add-button' %>
             </div>
            
        </div>      
    </div>   
  
      <div class="col-md-6">
      <h3> Preparacion</h3>
        <div id="directions">
            <%= f.fields_for :directions do |direction| %>
              <%= render 'direction_fields', f: direction %>
              <% end %>
             <div class="links">
                <%= link_to_add_association 'Agregar', f, :directions, class: 'btn btn-default add-button' %>
             </div>
            
        </div>      
    </div>   
  </div>
<br>


  <div class="actions">
    <%= f.submit "Crear", class: 'btn btn-primary' %>
  </div>
<% end %><br>

<%= link_to 'Back', root_path, class: "btn btn-default" %>
</div>